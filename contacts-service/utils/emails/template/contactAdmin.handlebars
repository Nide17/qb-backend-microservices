            color: #856404;
            font-weight: 600;
            margin-bottom: 15px;
        }

        .contact-email {
            background: white;
            border: 2px solid #157A6E;
            border-radius: 8px;
            padding: 15px;
            margin: 15px 0;
            text-align: center;
            font-family: 'Courier New', monospace;
            font-size: 16px;
            font-weight: 700;
            color: #157A6E;
        }

        .priority-section {
            background: linear-gradient(135deg, #f8d7da, #f5c6cb);
            border: 1px solid #f5c6cb;
            border-left: 4px solid #dc3545;
            padding: 25px;
            margin: 30px 0;
            border-radius: 8px;
        }

        .priority-title {
            color: #721c24;
            font-weight: 700;
            margin-bottom: 15px;
            font-size: 18px;
        }

        .priority-item {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
            padding: 15px;
            background: rgba(255, 255, 255, 0.7);
            border-radius: 8px;
        }

        .priority-icon {
            font-size: 24px;
            margin-right: 15px;
            flex-shrink: 0;
            color: #dc3545;
        }

        .priority-text {
            color: #721c24;
            font-weight: 500;
            line-height: 1.5;
        }

        .action-section {
            background: linear-gradient(135deg, #157A6E, #1e8e85);
            color: white;
            padding: 30px;
            margin: 30px 0;
            border-radius: 12px;
            text-align: center;
        }

        .action-title {
            font-size: 20px;
            font-weight: 700;
            margin-bottom: 20px;
        }

        .action-buttons {
            display: flex;
            gap: 15px;
            justify-content: center;
            flex-wrap: wrap;
        }

        .action-button {
            background: rgba(255, 255, 255, 0.2);
            color: white;
            padding: 12px 24px;
            border-radius: 25px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            border: 2px solid rgba(255, 255, 255, 0.3);
        }

        .action-button:hover {
            background: white;
            color: #157A6E;
            transform: translateY(-2px);
        }

        .urgent-note {
            background: linear-gradient(135deg, #dc3545, #e74c3c);
            color: white;
            padding: 20px;
            margin: 30px 0;
            border-radius: 8px;
            text-align: center;
            animation: blink 2s infinite;
        }

        @keyframes blink {
            0%, 50% { opacity: 1; }
            51%, 100% { opacity: 0.8; }
        }

        .urgent-text {
            font-weight: 700;
            font-size: 16px;
        }

        .footer {
            background-color: #f8f9fa;
            padding: 30px;
            border-top: 1px solid #e9ecef;
        }

        .company-info {
            text-align: center;
            margin-bottom: 25px;
        }

        .company-name {
            color: #157A6E;
            font-size: 24px;
            font-weight: 700;
            margin-bottom: 8px;
        }

        .company-tagline {
            color: #666;
            font-size: 16px;
            font-weight: 600;
            margin-bottom: 8px;
        }

        .company-location {
            color: #333;
            font-size: 14px;
            font-weight: 500;
        }

        .admin-notice {
            background-color: #d1ecf1;
            border: 1px solid #bee5eb;
            color: #0c5460;
            padding: 15px;
            border-radius: 8px;
            text-align: center;
            font-size: 12px;
            margin-top: 20px;
            font-weight: 600;
        }

        @media only screen and (max-width: 600px) {
            .container {
                margin: 10px;
                border-radius: 0;
            }
            
            .content {
                padding: 30px 20px;
            }
            
            .header {
                padding: 30px 20px;
            }
            
            .footer {
                padding: 25px 20px;
            }

            .header-icon {
                font-size: 50px;
            }

            .action-buttons {
                flex-direction: column;
                align-items: center;
            }

            .priority-item {
                flex-direction: column;
                text-align: center;
            }

            .priority-icon {
                margin-right: 0;
                margin-bottom: 10px;
            }
        }
    </style>
</head>

