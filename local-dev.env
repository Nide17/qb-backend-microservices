# Local Development Environment Variables
# Copy this to .env in each service directory

# MongoDB Configuration (use local MongoDB or MongoDB Atlas free tier)
MONGODB_URI=mongodb://localhost:27017/qb-local
DB_NAME=qb-local

# JWT Configuration
JWT_SECRET=your-local-jwt-secret-key-here
JWT_EXPIRES_IN=7d

# AWS S3 Configuration (optional for local development)
AWS_ACCESS_KEY_ID=local-dev-key
AWS_SECRET_ACCESS_KEY=local-dev-secret
AWS_REGION=us-east-1
AWS_BUCKET_NAME=qb-local-uploads

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# API Gateway
API_GATEWAY_URL=http://localhost:5000

# Service Ports
USERS_SERVICE_PORT=5001
QUIZZING_SERVICE_PORT=5002
POSTS_SERVICE_PORT=5003
SCHOOLS_SERVICE_PORT=5004
COURSES_SERVICE_PORT=5005
SCORES_SERVICE_PORT=5006
DOWNLOADS_SERVICE_PORT=5007
CONTACTS_SERVICE_PORT=5008
FEEDBACKS_SERVICE_PORT=5009
COMMENTS_SERVICE_PORT=5010
STATISTICS_SERVICE_PORT=5011

# Email Configuration (optional for local dev)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Development Mode
NODE_ENV=development
